@page
@inherits Acesoft.Web.UI.RazorPages.WebPage
@inject IConfigService ConfigService
@{
    var cfg = ConfigService.GetConfig(1);
    var name = cfg["sys_name"];

    ViewData["Title"] = name;
    Layout = "_shared/plat";
    Ace.RenderAuthOptions = true;
}
<div class="ct-gray">
    <div class="pt30 pb20 text-c">
        <span class="text-warning h3">欢迎您访问@(name)！</span>
    </div>
    <div class="container-fluid">
        @await Html.PartialAsync("_views/user", Ace)
    </div>
</div>