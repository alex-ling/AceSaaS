@page
@inherits Acesoft.Web.UI.RazorPages.WebPage
@{
    Layout = "_shared/back";
    ViewData["Title"] = "编辑";

    Ace.View().Id("view").Ajax(ds => ds.DataSource("iot.class").Form(new
    {
        parentid = App.GetQuery("parentid", ""),
        flno = "",
        name = "",
        remark = ""
    }).HttpSave()).Content(
        @<div class="container-fluid">
            <div class="row">
                <div class="col-xs-2 text-r"><span class="cr-red">*</span> 分类编号：</div>
                <div class="col-xs-6">@Ace.TextBox().Name("flno").Width("100%").Required().ValidType("length[2,2]")</div>
                <div class="col-xs-4"><span class="text-warning">长度为2位字符或数字</span></div>
            </div>
            <div class="row">
                <div class="col-xs-2 text-r"><span class="cr-red">*</span> 分类名称：</div>
                <div class="col-xs-6">@Ace.TextBox().Name("name").Width("100%").Required()</div>
                <div class="col-xs-4"></div>
            </div>
            <div class="row">
                <div class="col-xs-2 text-r">备注：</div>
                <div class="col-xs-6">@Ace.TextBox().Name("remark").Width("100%")</div>
                <div class="col-xs-4"></div>
            </div>
            @Html.AntiForgeryToken()
        </div>
    ).Render();
}
@section startup { 
    <script>
        $(function () {
            $('#flno').textbox('textbox').keyup(function () {
                $('#flno').textbox('setValue', this.value.replace(/[^\w]/g, '').toUpperCase());
            });
        });
    </script>
}